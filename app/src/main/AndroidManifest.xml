<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.anorthenrailway">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/nr_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nr_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.debug.ActivityDebug"
            android:label="Seaton">
        </activity>
        <activity
            android:name=".ActivityBarcode"
            android:label="Mobile Tickets"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ActivityTickets"
            android:label="Mobile Tickets"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.root.ActivityRoot"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>